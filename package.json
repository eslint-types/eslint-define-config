{
  "name": "eslint-define-config",
  "version": "1.17.0",
  "description": "Provide a defineConfig function for .eslintrc.js files",
  "main": "src/index.js",
  "module": "src/index.mjs",
  "scripts": {
    "clean": "rm -Rf dist pnpm-lock.yaml node_modules",
    "check": "tsc",
    "format": "prettier --write .",
    "lint": "eslint .",
    "typecheck": "vitest typecheck",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run clean && pnpm install && pnpm run check",
    "generate:rules": "tsx ./scripts/generate-rule-files/cli.ts"
  },
  "keywords": [
    "config",
    "configuration",
    "define-config",
    "eslint-config",
    "eslint",
    "eslintconfig",
    "typed",
    "typescript"
  ],
  "author": {
    "name": "Christopher Quadflieg",
    "email": "chrissi92@hotmail.de",
    "url": "https://github.com/Shinigami92"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Shinigami92/eslint-define-config.git"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/Shinigami92"
    },
    {
      "type": "paypal",
      "url": "https://www.paypal.com/donate/?hosted_button_id=L7GY729FBKTZY"
    }
  ],
  "bugs": "https://github.com/Shinigami92/eslint-define-config/issues",
  "license": "MIT",
  "files": [
    "src",
    "tsconfig.json"
  ],
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "~3.16.1",
    "@intlify/eslint-plugin-vue-i18n": "~2.0.0",
    "@poppinss/cliui": "~3.0.5",
    "@types/eslint": "~8.21.2",
    "@types/json-schema": "~7.0.11",
    "@types/node": "~18.15.3",
    "@types/prettier": "~2.7.2",
    "@typescript-eslint/eslint-plugin": "~5.55.0",
    "@typescript-eslint/parser": "~5.55.0",
    "change-case": "~4.1.2",
    "eslint": "~8.36.0",
    "eslint-config-prettier": "~8.7.0",
    "eslint-gitignore": "~0.1.0",
    "eslint-plugin-deprecation": "~1.3.3",
    "eslint-plugin-eslint-comments": "~3.2.0",
    "eslint-plugin-import": "~2.27.5",
    "eslint-plugin-inclusive-language": "~2.2.0",
    "eslint-plugin-jsdoc": "~40.0.3",
    "eslint-plugin-jsonc": "~2.7.0",
    "eslint-plugin-mdx": "~2.0.5",
    "eslint-plugin-n": "~15.6.1",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-prettier": "~4.2.1",
    "eslint-plugin-promise": "~6.1.1",
    "eslint-plugin-sonarjs": "~0.18.0",
    "eslint-plugin-spellcheck": "~0.0.20",
    "eslint-plugin-unicorn": "~46.0.0",
    "eslint-plugin-vue": "~9.9.0",
    "eslint-plugin-vue-pug": "~0.6.0",
    "expect-type": "~0.15.0",
    "graphql": "~16.6.0",
    "json-schema": "~0.4.0",
    "json-schema-to-ts": "~2.7.2",
    "json-schema-to-typescript": "~12.0.0",
    "prettier": "2.8.4",
    "prettier-plugin-organize-imports": "~3.2.2",
    "ts-dedent": "~2.2.0",
    "tsx": "~3.12.5",
