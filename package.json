    "rimraf": "~5.0.1",
    "ts-dedent": "~2.2.0",
    "tsx": "~3.12.7",
    "typescript": "~5.1.6",
    "upper-case-first": "~2.0.2",
    "vitest": "~0.33.0",
    "vue-eslint-parser": "~9.3.1"
  },
  "packageManager": "pnpm@8.6.10",
  "engines": {
    "node": "^16.13.0 || >=18.0.0",
    "npm": ">=7.0.0",
    "pnpm": ">= 8.6.0"
  }
}
